<h1>SLAYT DÜZENLEME</h1>
@model SliderEditViewModel
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group container-fluid">
        <label asp-for="Title"><b>Slayt Başlığı</b> </label>
        <input asp-for="Title" class="form-control"/>
        

        <label class="mt-3 mb-0" asp-for="Description"><b>Slayt Açıklaması</b></label>
        <input asp-for="Description" class="form-control" />


        <div class="form-check form-switch align-">
            <label asp-for="Order" class="col-sm-2 col-form-label"><b>Slayt Kategorisi</b></label>
            <select asp-for="Order" class="form-control" asp-items="@ViewBag.OrderList"></select>
            
        </div>

        <label asp-for="IsActive">@Html.DisplayNameFor(m => m.IsActive) </label>
        <input asp-for="IsActive" class="form-check" />
        <br />

        <div class="form-group mt-3">
            @{
                if (Model.Picture != null)
                {
                    <img width="200px" height="200px" class="img-thumbnail table-responsive-md " src="~/images/@Model.Picture" />
                }
            }<br />
            <label class="mt-3" asp-for="PictureFormFile">Slaytın Resmini Seçiniz </label>
            <input asp-for="PictureFormFile" type="file" class="form-control" />

        </div>
        <input asp-for="Picture" type="hidden" />
        <input asp-for="Created" type="hidden"/>
    </div>
    <button class="btn btn-success ">Slaytı Kaydet</button>
    <a class="btn btn-danger" asp-controller="Slider" asp-action="Index">Geri</a>
    </td>

</form>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
