@model List<SliderViewModel>

<a class="btn btn-primary" asp-action="Create" asp-controller="Slider">Yeni Slayt Ekle</a>

<table class="table table-striped table-hover">
    <tr class="text-danger fw-bolder">
@*         <td>#</td> *@
        <td> Başlık</td>
        <td> Açıklama</td>
        <td> Slayt Sırası</td>
        <td> Aktiflik ?</td>
        <td> Resmi</td>
        <td> İşlemleri</td>


    </tr>

    @foreach (var item in Model.OrderBy(x=> x.Order).ThenBy(x=> x.Created))
    {
        <tr>
@*             <td>@item.RowNum</td> *@
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Order</td>
            <td>@(item.IsActive ? "Yayında" : "Yayında Değil")    </td>
            <td> <img height="60px" width="60px" src="~/Images/@item.Picture" alt="Resim Yok" /> </td>
            <td>
                <a class="btn btn-info" asp-controller="Slider" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-danger" asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>

        </tr>
    }

</table>