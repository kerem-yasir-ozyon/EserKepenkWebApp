@model SliderViewModel
<form asp-action="Create" method="post" enctype="multipart/form-data" id="accept-form">
    <div class="form-group">

        <label asp-for="Title">@Html.DisplayNameFor(m => m.Title) </label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="form-text text-danger"></span><br />

        <label asp-for="Description">@Html.DisplayNameFor(m => m.Description) </label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="form-text text-danger"></span><br />

        <label asp-for="Order">@Html.DisplayNameFor(m => m.Order) </label>
        <select asp-for="Order" class="form-control" asp-items="@ViewBag.OrderList"></select>
        <span asp-validation-for="Order" class="form-text text-danger"></span><br />

        <label asp-for="IsActive">@Html.DisplayNameFor(m => m.IsActive) </label>
        <input asp-for="IsActive" class="form-check" />
        <span asp-validation-for="IsActive" class="form-text text-danger"></span><br />
       
        <div class="form-group">
            <label asp-for="PictureFormFile">@Html.DisplayNameFor(m => m.PictureFormFile) </label>
            <input asp-for="PictureFormFile" type="file" class="form-control" />
            <span asp-validation-for="PictureFormFile" class="form-text text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">EKLE</button>

</form>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}