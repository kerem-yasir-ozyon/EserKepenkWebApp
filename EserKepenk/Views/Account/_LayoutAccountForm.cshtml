        <div class="card-header text-center">
            <a  asp-controller="Home" asp-action="Index" class="h1"><b>Yaso</b>YAZILIM</a>
            <a  asp-controller="Home" asp-action="Index" class="h1"><b>Özyön</b>YAZILIM</a>
        </div>
