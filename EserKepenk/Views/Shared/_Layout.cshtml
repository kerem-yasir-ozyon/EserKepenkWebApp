<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Eser Kepenk ADMİN PANEL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EserKepenk.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EserKepenkFront.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EserKepenkFront/Views/shared/_Layout.cshtml.css" asp-append-version="true" />
</head>
<body>
    <header>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
            <div class="container respo">
                <a asp-controller="home" asp-action="Index" class="navbar-brand">
                    <img src="~/admin/dist/img/logo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                    <span class="brand-text font-weight-light">Eser Kepenk</span>
                </a>

                <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse order-3" id="navbarCollapse">
                    <!-- Left navbar links -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-controller="home" asp-action="Index" class="nav-link">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="messages" class="nav-link">Gelen Kutusu</a>
                        </li>
                   
                        <li class="nav-item dropdown">
                            <a id="dropdownSubMenu1" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle">Ürünler</a>
                            <ul aria-labelledby="dropdownSubMenu1" class="dropdown-menu border-0 shadow">
                                <li class="dropdown-divider"></li>
                                <!-- Level two dropdown-->
                                <li class="dropdown-submenu dropdown-hover">
                                    <a id="dropdownSubMenu2" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-item dropdown-toggle">İşlemler</a>
                                    <ul aria-labelledby="dropdownSubMenu2" class="dropdown-menu border-0 shadow">
                                        <li><a asp-controller="Product" asp-action="Index" class="dropdown-item">Ürünleri Listele</a></li>
                                        <li><a asp-controller="Product" asp-action="Create" class="dropdown-item">Ürün Ekle</a></li>
                                    </ul>
                                </li>
                                <!-- End Level two -->
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a id="dropdownSubMenu1" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle">Kategoriler</a>
                            <ul aria-labelledby="dropdownSubMenu1" class="dropdown-menu border-0 shadow">
                                <li class="dropdown-divider"></li>
                                <!-- Level two dropdown-->
                                <li class="dropdown-submenu dropdown-hover">
                                    <a id="dropdownSubMenu2" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-item dropdown-toggle">İşlemler</a>
                                    <ul aria-labelledby="dropdownSubMenu2" class="dropdown-menu border-0 shadow">
                                        <li><a asp-controller="Category" asp-action="Index" class="dropdown-item">Kategori Listele</a></li>
                                        <li><a asp-controller="Category" asp-action="Create" class="dropdown-item">Kategori Ekle</a></li>                          
                                    </ul>
                                </li>
                          
                                <!-- End Level two -->
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Slider" class="nav-link">Slaytı Yönet</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link text-danger">Bize Ulaşın</a>
                        </li>
                    </ul>
                </div>
                <!-- Right navbar links -->
                <ul class="order-1 order-md-3 navbar-nav navbar-no-expand ml-auto">
                    <li>
                        <div class="btn-group me-0">
                            <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                @ViewBag.UserNameSurname
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Profil</a></li>
                                <li><a asp-controller="Account" asp-action="Logout" class="dropdown-item">Çıkış</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
     
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-3">
        <div class="container">
            &copy; 2024 - YASO Yazılım - <a href="https//www.linkedin.com/in/yasin-bagcuvan">Privacy</a>
            ---
            &copy; 2024 - ÖZYÖN Yazılım - <a href="www.linkedin.com/in/kerem-yasir-özyön">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/admin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 5 -->
    <script src="~/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Admin App -->
    <script src="~/admin/dist/js/adminlte.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
